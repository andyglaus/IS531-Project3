<p id="notice"><%= notice %></p>

<h1>Employees</h1></br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Location</th>
      <th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.location %></td>
        <% if Belonging.where(:employee_id => employee.id).blank? %>
          <td></td>
        <% else %>
          <td><%= Belonging.where(:employee_id => employee.id).all.map{|b| b.name} %></td>
        <% end %>
        <td><%= link_to 'View Info', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


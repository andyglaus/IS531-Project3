<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Organization</th>
      <th>Manufacturer</th>
      <th>Part Number</th>
      <th>Description</th>
      <th>Month</th>
      <th>Year</th>
      <th>Maintanence Notes</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @belongings.each do |belonging| %>
      <tr>
        <td><%= belonging.name %></td>
        <td><%= belonging.location %></td>
        <td><%= belonging.organization %></td>
        <td><%= belonging.manufacturer %></td>
        <td><%= belonging.part %></td>
        <td><%= belonging.description %></td>
        <td><%= belonging.month %></td>
        <td><%= belonging.year %></td>
        <td><%= belonging.notes %></td>
        <td><%= Employee.find(belonging.employee_id).name %></td>
        <td><%= link_to 'Show', belonging %></td>
        <td><%= link_to 'Edit', edit_belonging_path(belonging) %></td>
        <td><%= link_to 'Delete', belonging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


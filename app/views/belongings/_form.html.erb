<%= form_for(belonging) do |f| %>
  <% if belonging.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(belonging.errors.count, "error") %> prohibited this belonging from being saved:</h2>

      <ul>
      <% belonging.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'Item Name' %>
    <input type="text" class="form-control"  placeholder="Name" <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :'Location' %>
    <select class="form-control" <%= f.text_field :location %> >
      <option>-Select a Location-</option>
      <option>Provo</option>
      <option>Orem</option>
      <option>Salt Lake</option>
      <option>Logan</option>
      <option>Lehi</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :'Organization' %>
    <select class="form-control" <%= f.text_field :organization %> >
      <option>-Select an Organization-</option>
      <option>IT</option>
      <option>Accounting</option>
      <option>Finance</option>
      <option>HR</option>
      <option>Sales</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :'Manufacturer' %>
    <select class="form-control" <%= f.text_field :manufacturer %> >
      <option>-Select a Manufacturer-</option>
      <option>Dell</option>
      <option>HP</option>
      <option>Apple</option>
      <option>Samsung</option>
      <option>LG</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :'Part Number' %>
    <input type="text" class="form-control" placeholder="Part Number" <%= f.number_field :part %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <textarea class="form-control" rows="3" <%= f.text_area :description %></textarea>
  </div>

  <div class="field">
    <%= f.label :'Implementation Month' %>
    <select class="form-control" <%= f.text_field :month %> >
      <option>-Select a Month-</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
      <option>11</option>
      <option>12</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :'Implementation Year' %>
    <select class="form-control" <%= f.text_field :year %> >
      <option>-Select a Year-</option>
      <option>2001</option>
      <option>2002</option>
      <option>2003</option>
      <option>2004</option>
      <option>2005</option>
      <option>2006</option>
      <option>2007</option>
      <option>2008</option>
      <option>2009</option>
      <option>2010</option>
      <option>2011</option>
      <option>2012</option>
      <option>2013</option>
      <option>2014</option>
      <option>2015</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :'Manufacturer Notes' %>
    <textarea class="form-control" rows="3" <%= f.text_area :notes %></textarea>
  </div><br>

  <div class="field">
    <%= f.label :'Assigned to:' %>
    <%= f.collection_select :employee_id, Employee.order(:name),:id,:name, include_blank: true %>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
